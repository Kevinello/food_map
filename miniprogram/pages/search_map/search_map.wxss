.search-cover {
  background-color: #FFFFFF;
  width: 90%;
  margin: 0 5%;
  top: 20rpx;
  position: absolute;
  border-radius: 40rpx;
  box-shadow: 4rpx 4rpx 2rpx #cccccc;
}

.search-box {
	background-color: #FFFFFF;
	display: flex;
	width: 90%;
  margin: 20rpx 5%;
  border-radius: 60rpx;
}

.search-input {
	color: #000000;
	background-color: #FFFFFF;
	width: 80%;
	margin-top: 30rpx;
}

.search-icon {
	background-color: #FFFFFF;
	width: 50rpx;
	height: 50rpx;
	margin: 20rpx 20rpx;
}

.input-placeholder{
  text-align: center;
}
.not_found{
  display: flex;
  width: 100%;
  height: 750rpx;
  justify-content: center;
  line-height: 750rpx;
}
.card{
  border-bottom: 1rpx solid #cecece;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding:10rpx;
}
.card_title{
  font-size: 50rpx;
  font-weight: 700;
}
.card_infobar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.card_address{
  font-size: 30rpx;
  font-weight: 300;
  width:750rpx;
  overflow: hidden;
  white-space:nowrap;
}
.no_result_button{
  display:flex;
  flex-direction:column;
  justify-content:center;
  height:700rpx;
  width:750rpx;
  align-items:center;
  font-size: 30rpx;
}
.view_all{
  margin-top: 40rpx;
}